  notes={uses surface EMG. Shows  that  trajectory  variability  decreased  and  endpoint  accuracy  improved  as  target  size  de-creased, and that this improvement in accuracy was accompanied by an increase in cocontraction. 2 d.o.f (shoulder and elbow) supported with air sleds}
  }

@article{missenard2008role,
  title={The role of cocontraction in the impairment of movement accuracy with fatigue},
  author={Missenard, Olivier and Mottet, Denis and Perrey, Stephane},
  journal={Experimental brain research},
  volume=185,
  number=1,
  pages={151--156},
  year=2008,
  publisher={Springer},
  notes={Check for target reaching accuracy before and after fatigue protocol. Control for loss of muscular force after fatigue by reducing the inertia of the manipulandum was decreased after the fatigue protocol. After the fatigue protocol, movement end-point accuracy decreased, movement endpoint variability increased, and cocontraction decreased. 1 dof (elbow). Measures EMG, defines cocontraction using an index based on integrals of EMG. Hypothesis is that it is due to cocontraction being metabolically costly}
}


