@article{heald2018increasing,
  title={Increasing muscle co-contraction speeds up internal model acquisition during dynamic motor learning},
  author={Heald, James B and Franklin, David W and Wolpert, Daniel M},
  journal={Scientific reports},
  volume=8,
  number=1,
  pages={1--11},
  year=2018,
  publisher={Nature Publishing Group},
  notes={shows that co-contraction improves learning rate in force field in a channel adaptation task with respect to no-co-contraction group and control group. Hypothesis is that it is because it reduces kinematic errors so the internal model can be fit better. Note that co-contraction increases EMG noise (this was analyzed in other papers as well). Shows also the co-contraction is reduced as learning progresses.}
}

