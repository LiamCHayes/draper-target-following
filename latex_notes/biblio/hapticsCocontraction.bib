@article{selen2005can,
  title={Can co-activation reduce kinematic variability? A simulation study},
  author={Selen, Luc PJ and Beek, Peter J and Die{\"e}n, Jaap H van},
  journal={Biological cybernetics},
  volume={93},
  number={5},
  pages={373--381},
  year={2005},
  publisher={Springer},
  notes={First, shows that single Hill-type motor model for muscles does not predict variability $\propto$ force, but multiple parallel Hill-type motors do; two types: ITM, where all motor units act on the same center, and DTM where all motor units connect on the same tendon. Cc suppresses variability, except at low levels; this creates a peak that moves depending on inertia. DTM/ITM gives same forces but different kinematic variability/impedance}
}

@article{selen2007impedance,
  title={Impedance modulation: a means to cope with neuromuscular noise},
  author={Selen, Luc Paul Jeanne},
  journal={Human Movement Sciences},
  pages={142},
  year={2007},
  notes={Thesis. Quantify stiffness vs target size and movement, vs fatigue. Points also to other strategies: adaptive partitioning in redudant-muscle tasks, speed modulation. cc more effective for free-space tasks (no mechanical interactions such as writing), possibly due to feedback based on contact, posture selection (manipulating the Jacobian).}
}

@article{gribble2003role,
  title={Role of cocontraction in arm movement accuracy},
  author={Gribble, Paul L and Mullin, Lucy I and Cothros, Nicholas and Mattar, Andrew},
  journal={Journal of neurophysiology},
  volume=89,
  number=5,
  pages={2396--2405},
  year=2003,
